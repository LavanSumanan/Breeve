{
    "manifest_version": 2,
    "name": "Breeve",
    "description":"The chrome extension to help distressed teens breathe and calm down.",
    "version": "0.1",
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_title": "Breeve",
      "default_icon": "breeve.png"},
      "commands": {
        "_execute_browser_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+B",
            "mac": "MacCtrl+Shift+B"
          }
        }
      },
      "permissions": [
        "tabs"
      ]
  }